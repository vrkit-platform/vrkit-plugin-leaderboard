    "@types/node": "^22.10.2",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.1",
    "@vrkit-platform/models": "^1.1.0",
    "@vrkit-platform/plugin-sdk": "^1.1.0",
    "@vrkit-platform/shared": "^1.1.0",
    "@vrkit-platform/shared-ui": "^1.1.0",
    "builtin-modules": "^4.0.0",
